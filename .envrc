#!/usr/bin/env bash
# This file is used by direnv to automatically load the development environment
# when entering the project directory.

if ! has nix_direnv_version || ! nix_direnv_version 3.0.4; then
  source_url "https://raw.githubusercontent.com/nix-community/nix-direnv/3.0.4/direnvrc" "sha256-DzlYZ33mWF/Gs8DDeyjr8mnVmQGx7ASYqA5WlxwvBG4="
fi

use flake

# Export useful variables for development
export RUST_BACKTRACE=1
export RUST_LOG=debug
export OLLAMA_URL=${OLLAMA_URL:-http://localhost:11434}

# Create local directories if they don't exist
mkdir -p .local/bin
mkdir -p .local/share
mkdir -p .local/data

# Add local bin to PATH
PATH_add .local/bin

echo "ðŸš€ Nanna Coder development environment loaded!"
echo "ðŸ“¦ Use 'nix develop' if direnv is not available"